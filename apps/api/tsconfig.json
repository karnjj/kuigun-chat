{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": true
  },
  "include": ["./src/**/*", ".eslintrc.js"],
  "exclude": ["node_modules", "dist"]
}
